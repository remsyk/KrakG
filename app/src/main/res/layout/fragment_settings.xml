<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="60dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <include
           android:id="@+id/include_notification_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           layout="@layout/viewgroup_settings_item"
           />

       <include
           android:id="@+id/include_imports_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           layout="@layout/viewgroup_settings_item"
           />

       <include
           android:id="@+id/include_transfer_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           layout="@layout/viewgroup_settings_item"
           />

       <include
           android:id="@+id/include_controls_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           layout="@layout/viewgroup_settings_item"
           />

       <include
           android:id="@+id/include_api_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           layout="@layout/viewgroup_settings_item"
           />

   </LinearLayout>
</ScrollView>